# -------------------------
# MySQL configuration
# -------------------------
MYSQL_ROOT_PASSWORD=rootpassword        # Root password for MySQL
MYSQL_DATABASE=paymybuddy              # Database name
MYSQL_USER=paymybuddy_user             # Application user
MYSQL_PASSWORD=supersecret             # Application user password

# -------------------------
# Spring Boot configuration
# -------------------------
SPRING_DATASOURCE_URL=jdbc:mysql://paymybuddy-db:3306/paymybuddy?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
# JDBC URL for Spring Boot to connect to MySQL
SPRING_JPA_HIBERNATE_DDL_AUTO=update    # Hibernate schema auto-update
SPRING_JPA_SHOW_SQL=true                # Show SQL queries in logs

# -------------------------
# Ports
# -------------------------
MYSQL_PORT=3306                          # Host port for MySQL
BACKEND_PORT=8080                        # Host port for backend
REGISTRY_PORT=5000                       # Host port for Docker Registry
